<script type="text/javascript">
function changeImg(lin){
  var img = document.getElementById("myImg");
  img.src=lin;
}
</script>
        <div id="main">
            <section id="content">
                <div id="columL">
                    <h3><%= prod.title %></h3>
                 <div class = "left-left">
                       <div class = "anons">
                           <section>
                             <div class = "image">
                              <a href = "#"> <img id="myImg"  src='data:image/jpg;base64,<%= prod.avatar1 %>' height="200" width="200" alt = "Apple"></a>
                             </div>
                           </section>
                       </div>
                    <div class="block">
                        <div class ="smal_img">
                          <a href = "#" onclick="changeImg('data:image/jpg;base64,<%= prod.avatar1 %>')"><img src='data:image/jpg;base64,<%= prod.avatar1 %>' height="50" width="50" alt = "Apple"></a>
                        </div>
                        <div class ="smal_img">
                          <a href = "#" onclick="changeImg('data:image/jpg;base64,<%= prod.avatar2 %>')"><img src='data:image/jpg;base64,<%= prod.avatar2 %>' height="50" width="50" alt = "Apple"></a>
                        </div>
                        <div class ="smal_img">
                          <a href = "#" onclick="changeImg('data:image/jpg;base64,<%= prod.avatar3 %>')"><img src='data:image/jpg;base64,<%= prod.avatar3 %>' height="50" width="50" alt = "Apple"></a>
                        </div>
                        <div class ="smal_img">
                          <a href = "#" onclick="changeImg('data:image/jpg;base64,<%= prod.avatar4 %>')"><img src='data:image/jpg;base64,<%= prod.avatar4 %>' height="50" width="50"  alt = "Apple"></a>
                        </div>

                    </div>
                  </div>
                <div class="columMed">
<table>

<tbody>
  <tr>
    <td><strong>Name</strong></td>

    <td><%= prod.title%></td>
  </tr>
  <tr>
    <td><strong>Price</strong></td>

    <td>$<%= prod.price%></td>
  </tr>

  <tr>
    <td><strong>Weight</strong></td>

    <td><%= prod.weight %></td>
  </tr>
  <tr>
    <td><strong>Guarantee</strong></td>

    <td><%= prod.guarantee %></td>
  </tr>
  <tr>
    <td><strong>Description </strong></td>

    <td><%= prod.description %></td>
  </tr>

</tbody>
</table>
<ul>
    <li>

        <div class="info">

            <div class="actions">
              <form action = "/addtocart" method="post">
                <input type="text" hidden="true" name="prtitle" value="<%= prod.title %>">
                <input type="text" hidden="true" name="prid" value="<%= user.identef%>">
               <input class = "a" type="submit" name="submit" value="Add to cart">
                </form >
                <form action = "/addtolist" method="post">
                  <input type="text" hidden="true" name="prtitle" value="<%= prod.title %>">
                  <input type="text" hidden="true" name="prid" value="<%= user.identef%>">
                 <input class = "b" type="submit" name="submit" value="Add to watch list">
                  </form >
                  <a href="#" id="easylink">Add comment</a>

            </div>
            <script>
$(document).ready(function () {
        $('a#easylink').click(function (e) {
            $(this).toggleClass('active');
            $('#description').toggle();
            e.stopPropagation();
        });  $('#description').click(function (e) {
            e.stopPropagation();
        });
        $('body').click(function () {
            var link = $('input#easylink');
            if (link.hasClass('active')) {
                link.click();
            }
        });
    });
</script>


        </div>
        <div class='form-row'>
           <label for='description'>Comment: </label>
           <textarea maxlength="500" id='description' name='description'></textarea>
         </div>
    </li>
  </ul>
                </div>

                </div>
                <div id="columR">
                    <h3>Top sells</h3>
                    <ul>
                           <% sales.filter(x => x.title).forEach( sale => { %>
                        <li>
                            <div class="img"><a href="/products/<%=sale.href%>"><img alt="" src='data:image/jpg;base64,<%= sale.avatar1 %>'></a></div>
                            <div class="info">
                                <a class="title" href="/products/<%=sale.href%>"><%= sale.title %></a>
                                <div class="price">
                                    <span id="lprice" class="usual"> $<%= sale.lastprice %> </span>&nbsp;
                                    <span class="special">$<%= sale.price %></span>
                                </div>
                            </div>
                        </li>
                        <% }); %>
                    </ul>
                </div>
            </section>
        </div>


