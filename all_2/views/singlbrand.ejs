<script type="text/javascript">
function changeImg(lin){
  var img = document.getElementById("myImg");
  img.src=lin;
}
</script>

        <div id="main">
            <section id="content">
                <div id="columL">
                    <h3><%= prod.name %></h3>
                 <div class = "left-left">
                       <div class = "anons">
                           <section>
                             <div class = "image">
                              <a href = "#"> <img id="myImg" src='data:image/jpg;base64,<%= prod.avatar1 %>' height="200" width="200" alt = "Apple"></a>
                             </div>
                           </section>
                       </div>

                  </div>
                <div class="columMed">
<table>

<tbody>
  <tr>
    <td><strong>Name</strong></td>

    <td><%= prod.name%></td>
  </tr>
  <tr>
    <td><strong>Founder</strong></td>

    <td><%= prod.founder%></td>
  </tr>

  <tr>
    <td><strong>Date</strong></td>

    <td><%= prod.date %></td>
  </tr>
  <tr>
    <td><strong>Staf</strong></td>

    <td><%= prod.staf %></td>
  </tr>
  <tr>
    <td><strong>Cost </strong></td>

    <td><%= prod.cost %></td>
  </tr>

</tbody>
</table>
<ul>
    <li>

      <% if(user.local.role =="admin") { %>
        <div class="info">
      <div class="actions">
      <form action = "/deleteprod" method="post">
         <input type="text" hidden="true" name="prtitle" value="<%= prod.name %>">
         <input type="text" hidden="true" name="prid" value="<%= user.identef%>">
         <input class = "a" type="submit" name="submit" value="Delete">

       </form >
       <form action = "/searchsimpl" method="get">
          <input type="text" hidden="true" name="prtitle" value="<%= prod.name %>">
          
          <input class = "b" type="submit" name="submit" value="Products of brand">

        </form >


      </div>
    </div>
          <% }; %>

    </li>
  </ul>
                </div>

                </div>
                <div id="columR">
                    <h3>Top sells</h3>
                    <ul>
                           <% sales.filter(x => x.title).forEach( sale => { %>
                        <li>
                            <div class="img"><a href="/products/<%=sale.href%>"><img alt="" src='data:image/jpg;base64,<%= sale.avatar1 %>'></a></div>
                            <div class="info">
                                <a class="title" href="/products/<%=sale.href%>"><%= sale.title %></a>
                                <div class="price">
                                    <span id="lprice" class="usual"> $<%= sale.lastprice %> </span>&nbsp;
                                    <span class="special">$<%= sale.price %></span>
                                </div>
                            </div>
                        </li>
                        <% }); %>
                    </ul>
                </div>
            </section>
        </div>


    <footer>

