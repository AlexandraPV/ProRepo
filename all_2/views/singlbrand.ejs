           <!-- <li><button> <img src="img/korzina1.png" href = "index.html"></button></li>-->
          </ul>
          </nav>

            <div class="head">
                <div class="logo">
                    <a href="#"><img src="../stylesheets/img/up.png" title="Logo" alt="Logo" /></a>
                </div>

                <section id="search">

                    <form action="/search"  method="get" enctype="form-data">

                        <input type="text"  name='q' placeholder= "Search" >
                        <input type="submit" value="search">
                    </form>

                    <ul id="social">
                      <li><a href="https://www.facebook.com" title="facebook" rel="external nofollow"><img alt="" src="../stylesheets/img/facebook.png"></a></li>
                      <li><a href="https://twitter.com" title="twitter" rel="external nofollow"><img alt="" src="../stylesheets/img/twitter.png"></a></li>
