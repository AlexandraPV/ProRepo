        </header>



        <div id="main">
            <section id="content">
                <div id="columL">
                     <h3>Add product</h3>
          <form action='/add' method='POST' class='add-form reg-form rf'  enctype="multipart/form-data" >

   		<div class='form-row'>
   			<label for='title'>Name: </label>
       		<input maxlength="30" type='text' class="rfield test" id='title' name='title'>
          <span id="msg" style="float:right; margin-right:10px"></span>
     		</div>

        <div class='form-row'>
          <label for='brand'>Brand: </label>
          <input maxlength="20" type='text'  class="rfield test" id='brand' name='brand'>
          <span id="msg1" style="float:right; margin-right:10px"></span>
        </div>

     		<div class='form-row'>
       		<label for='color'>Color: </label>
       		<input maxlength="20" type='text' class="rfield test" id='color' name='color'>
          <span id="msg2" style="float:right; margin-right:10px"></span>
   		</div>

   		<div class='form-row'>
   			<label for='weight'>Weight: </label>
   			<input maxlength="20" type='text' class="rfield test" id='weight' name='weight'>
        <span id="msg3" style="float:right; margin-right:10px"></span>
   		</div>

   		<div class='form-row'>
   			<label for='guarantee'>Guarantee: </label>
   			<input maxlength="20" type='text' class="rfield test" id='guarantee' name='guarantee'>
          <span id="msg4" style="float:right; margin-right:10px"></span>
   		</div>

      <div class='form-row'>
        <label for='price'>Price: </label>
        <input maxlength="20"  type='text' class="rfield test" id='price' name='price'>
          <span id="msg5" style="float:right; margin-right:10px"></span>
      </div>

      <div class='form-row'>
        <label for='lastprice'>Last Price: </label>
        <input maxlength="20"  type='text' class="rfield test" id='lastprice' name='lastprice'>
          <span id="msg6" style="float:right; margin-right:10px"></span>
      </div>

   		<div class='form-row'>
   			<label for='description'>Description: </label>
   			<textarea maxlength="200" id='description' class="rfield test" name='description'></textarea>
          <span id="msg7" style="float:right; margin-right:10px"></span>
   		</div>
      <p>Add 1 photo</p>
         <input type='file' name='avatar1' />
      <p>Add 2 photo</p>
          <input type='file' name='avatar2' />
      <p>Add 3 photo</p>
          <input type='file' name='avatar3' />
      <p>Add 4 photo</p>
          <input type='file' name='avatar4' />

          <p><select name="type" label="Choose">
    <option value="comp" selected>Computers and Laptops</option>
    <option value="phon" >Phones</option>
    <option value="home">Homeware</option>
    <option value="cloth" >Clothes and Footwear</option>
    <option value="book" >Books and stationery</option>
    <option value="applhome" >Home Appliances</option>
   </select>


   		<div class="form-row">
   			<input type="submit" class="btn_submit disabled" value='Add'>
   		</div>

   	</form>
                </div>
                <div id="columR">
                    <h3>Top sells</h3>
                    <ul>
                           <% sales.filter(x => x.title).forEach( sale => { %>
                        <li>
                            <div class="img"><a href="/products/<%=sale.href%>"><img alt="" src='data:image/jpg;base64,<%= sale.avatar1 %>'></a></div>
                            <div class="info">
                                <a class="title" href="/products/<%=sale.href%>"><%= sale.title %></a>
                                <div class="price">
                                    <span id="lprice" class="usual"> $<%= sale.lastprice %> </span>&nbsp;
                                    <span class="special">$<%= sale.price %></span>
                                </div>
                            </div>
                        </li>
                        <% }); %>
                    </ul>
                </div>
