        <div id="main">
            <section id="content">
                <div id="columL">
                     <h3>Registration</h3>
                <form action='/update' method='POST' enctype="multipart/form-data" class='reg-form rf '>

          	<div class='form-row'>
             			<label for='form_fname'>First Name: </label>
                 		<input type='text' class="rfield test" id='form_fname' name='first_name' value="<%=user.local.first_name%>">
                      <span id="msg" style="float:right; margin-right:10px"></span>
               		</div>

               		<div class='form-row'>
                 		<label for='form_sname'>Second Name: </label>
                 		<input type='text' class="rfield test" id='form_sname' name='second_name' value="<%=user.local.second_name%>">
                      <span id="msg1" style="float:right; margin-right:10px"></span>
             		</div>

                <div class='form-row'>
                  <label for='form_login'>Login: </label>
                  <input type='text' class="rfield test" id='form_login' name='login' value="<%= user.local.login %>">
                    <span id="msg2" style="float:right; margin-right:10px"></span>
              </div>


             		<div class='form-row'>
             			<label for='form_email'>Email: </label>
             			<input type='email' class="rfield test" id='form_email' name='email' value="<%=user.local.email%>">
                    <span id="msg3" style="float:right; margin-right:10px"></span>
             		</div>



           		<div class='form-row'>
             			<label for='form_phone'>Phone: </label>
             			<input type='text' class="rfield test" id='form_phone' name='phone' value="<%=user.local.phone%>">
                    <span id="msg6" style="float:right; margin-right:10px"></span>
             		</div>

             		<div class='form-row'>
             			<label for='form_about'>About myself: </label>
             			<textarea id='form_about' class="rfield test" name='about' value="<%=user.local.about%>"><%=user.local.about%></textarea>
                    <span id="msg7" style="float:right; margin-right:10px"></span>
             		</div>
               <input type="text" hidden="true" name="prid" value="<%= user.identef%>">

              

             		<div class="form-row">
             			<input type="submit" class="btn_submit disabled" value='Go'>
             		</div>

             	</form>
                </div>
                <div id="columR">
                    <h3>Top sells</h3>
                    <ul>
                           <% sales.filter(x => x.title).forEach( sale => { %>
                        <li>
                            <div class="img"><a href="/products/<%=sale.href%>"><img alt="" src='data:image/jpg;base64,<%= sale.avatar1 %>'></a></div>
                            <div class="info">
                                <a class="title" href="/products/<%=sale.href%>"><%= sale.title %></a>
                                <div class="price">
                                    <span id="lprice" class="usual"> $<%= sale.lastprice %> </span>&nbsp;
                                    <span class="special">$<%= sale.price %></span>
                                </div>
                            </div>
                        </li>
                        <% }); %>
                    </ul>
                </div>
            </section>
